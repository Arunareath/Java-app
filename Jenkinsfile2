pipeline {
    agent {
        kubernetes {
            yaml """
                apiVersion: v1
                kind: Pod
                metadata:
                  app: jenkins
                spec:
                  containers:
                  - name: maven
                    image: maven:alpine
                    command: ["sh", "-c", "echo 'Maven container started'; sleep 36000"]
                  - name: docker 
                    image: docker:20.10.7
                    command: ["sh", "-c", "echo 'Docker container started'; sleep 36000"]
                    volumeMounts:
                    - mountPath: /var/run/docker.sock  # Correct the mount path for Docker socket
                      name: docker-path
                  volumes:
                  - name: docker-path
                    hostPath:
                      path: /var/run/docker.sock
            """
        } 
    }
    environment {
        DOCKER_USERNAME = 'Arunareath'
        DOCKER_PASSWORD = '^runfive5App'
    }
    stages {
        stage('Clone') {
            steps {
                container('maven') {
                    checkout scm
                    sh 'mvn package'
                }
            }
        }
        stage('Build-Docker-Image') {
            steps {
                container('docker') {
                    sh 'docker build -t ss69261/testing-image:latest .'
               }
            }
        }
        stage('Login-Into-Docker') {
            steps {
                container('docker') {
                    sh 'docker login -u Arunareath -p ^runfive5App'
                }
            }
        }
        stage('Push-Images-Docker-to-DockerHub') {
            steps {
                container('docker') {
                     sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                }
            }
        }
    }
    post {
        always {
            container('docker') {
                sh 'docker logout'
            }
        }
    }
}
